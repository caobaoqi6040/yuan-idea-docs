{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/themes/*": [
        "./.vuepress/themes/*"
      ],
      "~/components/*": [
        "./.vuepress/themes/components/*"
      ],
      "~/composables/*": [
        "./.vuepress/themes/composables/*"
      ]
    },
    "types": [
      "webpack-env",
      "vite/client",
      "vuepress/client-types"
    ]
  },
  "include": [
    "plugins/**/*",
    "theme/**/*",
    "docs/.vuepress/**/*",
    "cli/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/.cache/**",
    "**/.temp/**",
    "**/lib/**",
    "**/dist/**"
  ]
}